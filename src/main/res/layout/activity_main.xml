<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="numberSigned|numberDecimal"
        android:layout_marginBottom="15dp"
        android:id="@+id/temp_box"
        />

    <RadioGroup xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <RadioButton android:id="@+id/toFahrenheitButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="toFahrenheit"
            android:onClick="onRadioButtonClicked"/>
        <RadioButton android:id="@+id/toCelsiusButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="toCelsius"
            android:onClick="onRadioButtonClicked"/>
    </RadioGroup>

    <Button android:id="@+id/calculate_button"
        android:text="Calculate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/final_view"
        />

</LinearLayout>